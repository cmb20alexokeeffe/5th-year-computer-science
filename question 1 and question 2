#This calculator can only add & subtract.
num1 = 9
num2 = 5
num3 = num1 - num2
print('Do you want me to (a)dd or (s)ubtract?')
choice = input()
if choice == 'a':
    print(num1, "+",  num2, "=", num3)
if choice == 'A':
    print(num1, "+",  num2, "=", num3)
elif choice == 's':
    print(num1, "-",  num2, "=", num3)
elif choice == 'S':
    print(num1, "-", num2, "=", num3)
else :
        print("invalid answer")
    
name = input("enter your name:")
print("hello", name, "welcome to the addition and subtraction calculator")

